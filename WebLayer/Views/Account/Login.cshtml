@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Iniciar sesión";
}
@model ApplicationCore.SEG.Models.Usuario
<script src="~/js/site.min.js" asp-append-version="true"></script>
<div id="loginForm" class="container" style="position: relative; z-index:1;">
    <div class="fadeInLoad">
        <div class="signin-info">
            <p id="profile-name" class="profile-name-card">Iniciar sesión</p>
        </div>

        <div style="padding-top:30px" class="card card-container">

            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form asp-controller="Account" asp-action="Login" data-ajax="true" data-ajax-method="POST" data-ajax-success="OnSuccess" class="form-horizontal" >
                    xvxcvxc
                    
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control input-lg", @placeholder = "Usuario" })
                        @Html.ValidationMessageFor(m => m.NombreUsuario)
                    </div>
                   
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        
                        @Html.PasswordFor(m => m.Clave, new { @class = "form-control input-lg", @placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(m => m.NombreUsuario)
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <button type="submit" class="btn btn-success" style="width:100%;"> <i class="fa fa-sign-in" aria-hidden="true"></i> Ingresar</button>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                ¿Olvido la contraseña? Recuperela
                                <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                    aqui
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
        </div>
    </div>
</div>

<script type="text/javascript">

    function OnSuccess(data) {
        
        if (data.state)
        {
            $("#loginForm").fadeOut();
            window.location.href = "/Home/index";
        }
    }
    function OnFailure(data) {
        alert('HTTP Status Code: ' + data.param1 + '  Error Message: ' + data.param2);
    }
</script> 